<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Post List</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
</head>
<body>
    <div class="row m-3">
        {% for message in app.flashes('info') %}
            <p>{{ message }}</p>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <p>{{ message }}</p>
        {% endfor %}
        <table class="table table-bordered">
            <thead class="thead-dark">
            <tr>
                <th style="border: 1px solid #acacac">{{ knp_pagination_sortable(pagination, 'ID', 'o.id') }}</th>
                <th style="border: 1px solid #acacac">{{ knp_pagination_sortable(pagination, 'Title', 'o.title') }}</th>
                <th style="border: 1px solid #acacac">URL</th>
                <th style="border: 1px solid #acacac">Category</th>
                <th style="border: 1px solid #acacac">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for post in pagination %}
                <tr>
                    <td style="border: 1px solid #acacac">{{ post.id }}</td>
                    <td style="border: 1px solid #acacac">{{ post.title }}</td>
                    <td style="border: 1px solid #acacac">{{ post.slug }}</td>
                    <td style="border: 1px solid #acacac">{{ post.category.name }}</td>
                    <td style="border: 1px solid #acacac">
                        <a class="btn btn-sm btn-warning" href="{{ path('app_post_edit', {id: post.id}) }}" >Edit</a>
                        <a class="btn btn-sm btn-danger ml-1" href="{{ path('app_post_delete', {id: post.id}) }}">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {{ knp_pagination_render(pagination) }}
        <p class="ml-3"><a class="btn btn-primary" href="{{ path('app_post_add') }}">Add</a></p>
    </div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>
</html>

